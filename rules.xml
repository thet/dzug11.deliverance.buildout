<?xml version="1.0" encoding="UTF-8"?>
<ruleset>
  <server-settings>
    <server>localhost:5000</server>
    <execute-pyref>false</execute-pyref>
    <dev-allow>localhost</dev-allow>
    <dev-user username="admin" password="admin" />
    <display-local-files>false</display-local-files>
    <edit-local-files>false</edit-local-files>
  </server-settings>

  <proxy path="/" class="main">
    <dest href="http://zope.org" />
  </proxy>


  <!-- ====================================================== -->
  <!-- Rules                                                  -->
  <!-- ====================================================== -->

  <rule class="main" suppress-standard="1">
    <theme href="http://www.google.at/" />

    <drop content=".columns .left .box .body ul ul" />
    <replace content="children:.columns .left .box .body ul li" theme="children:#gbar" />

    <replace content=".top a[href='http://www.zope.org']" theme="children:#lga>div" />

    <!-- all attributes are copied, not only action and name -->
    <replace content="attributes(action,name):.searchBox form" theme="attributes(action,name):form" />

    <!-- #searchform does not work since rule is not applied to modified theme -->
    <drop theme="form input[type='hidden']" />

    <drop theme="input[name='btnI']" />
    <replace content="attributes(value):.searchButton" theme="attributes(value):input[name='btnG']" />



    <!-- drop theme="/html/head/meta" />

    <replace content="/html/head/title" theme="/html/head/title" />
    <append content="/html/head/meta" theme="children:/html/head" />
	<append content="/html/head/base" theme="children:/html/head" /-->

